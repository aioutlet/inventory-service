# =============================================================================
# Inventory Service Production Environment Configuration
# =============================================================================
# This file is used for VS Code debugging when connecting to production infrastructure
# Copied to .env automatically by scripts/deploy.sh production

# =============================================================================
# Flask Configuration
# =============================================================================
FLASK_ENV=production
FLASK_APP=run.py
SECRET_KEY=CHANGE_ME_PRODUCTION_INVENTORY_SECRET_KEY

# =============================================================================
# Service Configuration
# =============================================================================
SERVICE_NAME=inventory-service
SERVICE_VERSION=1.0.0

# =============================================================================
# Database Configuration
# =============================================================================
# MySQL connection - connects to production Docker infrastructure
DATABASE_HOST=localhost
DATABASE_PORT=3308
DATABASE_USER=inventoryuser
DATABASE_PASSWORD=CHANGE_ME_SECURE_MYSQL_PASSWORD
DATABASE_NAME=inventory_service_prod_db

# Test Database Configuration
TEST_DATABASE_NAME=inventory_service_prod_test_db

# =============================================================================
# Cache Configuration
# =============================================================================
# Redis connection - connects to production Docker infrastructure, uses database 4
REDIS_HOST=localhost
REDIS_PORT=6381
REDIS_PASSWORD=CHANGE_ME_SECURE_REDIS_PASSWORD
REDIS_DB=4
REDIS_URL=redis://:CHANGE_ME_SECURE_REDIS_PASSWORD@localhost:6381/4

# =============================================================================
# Cache TTL Configuration
# =============================================================================
# Cache time-to-live settings in seconds (production optimized)
CACHE_TTL_STOCK_CHECK=600
CACHE_TTL_INVENTORY=1200
CACHE_TTL_PRODUCTS=1800

# =============================================================================
# Message Broker Configuration
# =============================================================================
# Connects to production Docker infrastructure
RABBITMQ_URL=amqp://admin:CHANGE_ME_SECURE_RABBITMQ_PASSWORD@localhost:5674

# =============================================================================
# Service Discovery
# =============================================================================
# Production infrastructure services - connects to other microservices
PRODUCT_SERVICE_URL=http://localhost:8000
USER_SERVICE_URL=http://localhost:3002
AUTH_SERVICE_URL=http://localhost:3001
ADMIN_SERVICE_URL=http://localhost:3010
AUDIT_SERVICE_URL=http://localhost:9000

# =============================================================================
# Security Configuration
# =============================================================================
JWT_SECRET=CHANGE_ME_PRODUCTION_JWT_SECRET_AT_LEAST_256_BITS_LONG
JWT_EXPIRE=4h

# =============================================================================
# Business Logic Configuration
# =============================================================================
# Inventory-specific business rules (production optimized)
RESERVATION_TTL_MINUTES=15
LOW_STOCK_THRESHOLD=20
REORDER_THRESHOLD=10

# =============================================================================
# API Configuration
# =============================================================================
# Pagination and rate limiting settings (production restricted)
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=50
API_RATE_LIMIT_REQUESTS=500
API_RATE_LIMIT_WINDOW=3600

# =============================================================================
# CORS Configuration
# =============================================================================
CORS_ORIGINS=https://yourdomain.com,https://api.yourdomain.com

# =============================================================================
# Production Settings
# =============================================================================
DEBUG=false
TESTING=false

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_TO_CONSOLE=false
LOG_TO_FILE=true
LOG_FILE_PATH=./logs/inventory-service-production.log

# =============================================================================
# Observability Configuration  
# =============================================================================
# Tracing
ENABLE_TRACING=true
OTEL_SERVICE_NAME=inventory-service
OTEL_SERVICE_VERSION=1.0.0
OTEL_EXPORTER_OTLP_ENDPOINT=https://your-otlp-endpoint:4318/v1/traces

# Correlation ID
CORRELATION_ID_HEADER=x-correlation-id
