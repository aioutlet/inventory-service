# Environment
FLASK_ENV=production
SECRET_KEY=your-secret-key-here

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-here-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRES=3600

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=3306
DATABASE_USER=appuser
DATABASE_PASSWORD=apppass123
DATABASE_NAME=inventory_service_prod_db

# Test Database
TEST_DATABASE_NAME=inventory_service_test_db

# Redis Configuration  
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Cache TTL (seconds)
CACHE_TTL_STOCK_CHECK=300
CACHE_TTL_INVENTORY=600

# Reservation Settings
RESERVATION_TTL_MINUTES=30

# Service URLs
PRODUCT_SERVICE_URL=http://localhost:3001
USER_SERVICE_URL=http://localhost:3000

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Logging
LOG_LEVEL=INFO

# CORS
CORS_ORIGINS=*
