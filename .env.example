# =============================================================================
# Inventory Service Environment Configuration Template
# =============================================================================
# This file serves as a template for creating environment-specific .env files
# Copy this file and rename it to .env, then fill in the appropriate values

# =============================================================================
# Flask Configuration
# =============================================================================
FLASK_ENV=development
FLASK_APP=run.py
SECRET_KEY=your-flask-secret-key-change-in-production

# =============================================================================
# Service Configuration
# =============================================================================
SERVICE_NAME=inventory-service
SERVICE_VERSION=1.0.0

# =============================================================================
# Database Configuration
# =============================================================================
# MySQL connection settings
DATABASE_HOST=localhost
DATABASE_PORT=3306
DATABASE_USER=inventoryuser
DATABASE_PASSWORD=your-mysql-password
DATABASE_NAME=inventory_service_db

# Test Database Configuration
TEST_DATABASE_NAME=inventory_service_test_db

# =============================================================================
# Cache Configuration
# =============================================================================
# Redis connection settings - inventory service uses database 4
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=4
REDIS_URL=redis://:your-redis-password@localhost:6379/4

# =============================================================================
# Cache TTL Configuration
# =============================================================================
# Cache time-to-live settings in seconds
CACHE_TTL_STOCK_CHECK=300
CACHE_TTL_INVENTORY=600
CACHE_TTL_PRODUCTS=900

# =============================================================================
# Message Broker Configuration
# =============================================================================
# RabbitMQ connection string
RABBITMQ_URL=amqp://username:password@localhost:5672

# =============================================================================
# Service Discovery
# =============================================================================
# URLs for connecting to other microservices
PRODUCT_SERVICE_URL=http://localhost:8000
USER_SERVICE_URL=http://localhost:3002
AUTH_SERVICE_URL=http://localhost:3001
ADMIN_SERVICE_URL=http://localhost:3010
AUDIT_SERVICE_URL=http://localhost:9000

# =============================================================================
# Security Configuration
# =============================================================================
JWT_SECRET=your-jwt-secret-key-at-least-256-bits-long
JWT_EXPIRE=24h

# =============================================================================
# Business Logic Configuration
# =============================================================================
# Inventory-specific business rules
RESERVATION_TTL_MINUTES=30
LOW_STOCK_THRESHOLD=10
REORDER_THRESHOLD=5

# =============================================================================
# API Configuration
# =============================================================================
# Pagination and rate limiting settings
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100
API_RATE_LIMIT_REQUESTS=1000
API_RATE_LIMIT_WINDOW=3600

# =============================================================================
# CORS Configuration
# =============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8000,http://localhost:3010

# =============================================================================
# Environment Settings
# =============================================================================
DEBUG=true
TESTING=false

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=DEBUG
LOG_FORMAT=console
LOG_TO_CONSOLE=true
LOG_TO_FILE=true
LOG_FILE_PATH=./logs/inventory-service.log

# =============================================================================
# Observability Configuration  
# =============================================================================
# OpenTelemetry tracing configuration
ENABLE_TRACING=true
OTEL_SERVICE_NAME=inventory-service
OTEL_SERVICE_VERSION=1.0.0
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318/v1/traces

# Request correlation tracking
CORRELATION_ID_HEADER=x-correlation-id
