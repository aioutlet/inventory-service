# =============================================================================
# Inventory Service Local Development Configuration
# =============================================================================
# This file is used for VS Code debugging when infrastructure runs in Docker
# Copied to .env automatically by scripts/deploy.sh local

# =============================================================================
# Flask Configuration
# =============================================================================
FLASK_ENV=development
FLASK_APP=run.py
SECRET_KEY=inventory-local-secret-key-for-development-only-change-in-production

# =============================================================================
# Service Configuration
# =============================================================================
SERVICE_NAME=inventory-service
SERVICE_VERSION=1.0.0

# =============================================================================
# Database Configuration
# =============================================================================
# MySQL connection - needs to be added to Docker infrastructure
DATABASE_HOST=localhost
DATABASE_PORT=3306
DATABASE_USER=inventoryuser
DATABASE_PASSWORD=inventory_dev_pass_123
DATABASE_NAME=inventory_service_local_db

# Test Database Configuration
TEST_DATABASE_NAME=inventory_service_test_db

# =============================================================================
# Cache Configuration
# =============================================================================
# Redis connection - connects to Docker infrastructure, uses database 4
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_dev_pass_123
REDIS_DB=4
REDIS_URL=redis://:redis_dev_pass_123@localhost:6379/4

# =============================================================================
# Cache TTL Configuration
# =============================================================================
# Cache time-to-live settings in seconds
CACHE_TTL_STOCK_CHECK=300
CACHE_TTL_INVENTORY=600
CACHE_TTL_PRODUCTS=900

# =============================================================================
# Message Broker Configuration
# =============================================================================
# Message broker type: rabbitmq or kafka
MESSAGE_BROKER_TYPE=rabbitmq

# Connects to Docker infrastructure
RABBITMQ_URL=amqp://admin:admin123@localhost:5672
MESSAGE_BROKER_QUEUE=inventory-service.queue

# Message Broker Service URL for publishing events
MESSAGE_BROKER_SERVICE_URL=http://localhost:4000
MESSAGE_BROKER_API_KEY=dev-api-key-12345

# Kafka configuration (when MESSAGE_BROKER_TYPE=kafka)
# KAFKA_BROKERS=localhost:9092,localhost:9093,localhost:9094
# KAFKA_TOPICS=aioutlet.events
# KAFKA_GROUP_ID=inventory-service-group

# =============================================================================
# Service Discovery
# =============================================================================
# Infrastructure services - connects to other microservices
PRODUCT_SERVICE_URL=http://localhost:8000
USER_SERVICE_URL=http://localhost:3002
AUTH_SERVICE_URL=http://localhost:3001
ADMIN_SERVICE_URL=http://localhost:3010
AUDIT_SERVICE_URL=http://localhost:9000

# =============================================================================
# Security Configuration
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-for-development-only
JWT_EXPIRE=24h

# =============================================================================
# Business Logic Configuration
# =============================================================================
# Inventory-specific business rules
RESERVATION_TTL_MINUTES=30
LOW_STOCK_THRESHOLD=10
REORDER_THRESHOLD=5

# =============================================================================
# API Configuration
# =============================================================================
# Pagination and rate limiting settings
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100
API_RATE_LIMIT_REQUESTS=1000
API_RATE_LIMIT_WINDOW=3600

# =============================================================================
# CORS Configuration
# =============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8000,http://localhost:3010

# =============================================================================
# Development Settings
# =============================================================================
DEBUG=true
TESTING=false

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=DEBUG
LOG_FORMAT=console
LOG_TO_CONSOLE=true
LOG_TO_FILE=true
LOG_FILE_PATH=./logs/inventory-service-local.log

# =============================================================================
# Observability Configuration  
# =============================================================================
# Tracing
ENABLE_TRACING=true
OTEL_SERVICE_NAME=inventory-service
OTEL_SERVICE_VERSION=1.0.0
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318/v1/traces

# Correlation ID
CORRELATION_ID_HEADER=x-correlation-id
