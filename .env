# Environment
FLASK_ENV=development
SECRET_KEY=dev-secret-key-change-in-production

# Database Configuration (Docker MySQL)
DATABASE_HOST=localhost
DATABASE_PORT=3306
DATABASE_USER=appuser
DATABASE_PASSWORD=apppass123
