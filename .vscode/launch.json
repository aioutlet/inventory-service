{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/run.py",
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "FLASK_ENV": "development",
        "FLASK_DEBUG": "1",
        "PORT": "1005",
        "DAPR_HTTP_PORT": "3505",
        "DAPR_GRPC_PORT": "50005"
      },
      "preLaunchTask": "dapr-start-inventory",
      "postDebugTask": "dapr-stop-inventory"
    }
  ]
}
